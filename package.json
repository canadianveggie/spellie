{
  "name": "wordle-junior",
  "version": "0.0.1",
  "description": "Wordle for kids!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canadianveggie/wordle-junior.git"
  },
  "keywords": [
    "wordle",
    "word",
    "puzzle",
    "kids"
  ],
  "homepage": "https://github.com/canadianveggie/wordle-junior#readme",
  "scripts": {
    "start": "python -m SimpleHTTPServer",
    "test": "jest --verbose --watch",
    "test:ci": "jest",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint index.html public",
    "lint:prettier": "prettier --check '**/*.{css,js,html}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.1",
    "prettier": "2.5.1"
  },
  "browserslist": [
    ">0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not IE 11",
    "not dead"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom"
  }
}
